<h2><%= link_to l(:cinema_plural), cinemas_path %> &#187; <%=h @cinema.name %> </h2>

<%= labelled_form_for @cinema do |f| %>
  <%= error_messages_for 'cinema' %>

  <div class="box tabular">
  <!--[form:cinema]-->
  <p><%= f.text_field :name, :required => true, :size => 60 %></p>
  <p><%= f.text_field :telephone, :size => 60 %></p>
  <p><%= f.text_field :city, :size => 60 %></p>
  <p><%= f.text_field :postcode, :size => 60 %></p>
  <p><%= f.text_field :ip_address, :size => 60 %></p>
  <p><%= f.text_field :external_id, :size => 60 %></p>
  </div>

  <%= submit_tag l(:button_update) %>
<% end %>