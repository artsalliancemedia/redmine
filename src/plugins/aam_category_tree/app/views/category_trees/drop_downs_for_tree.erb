
  <% category_tree_selects = drop_downs_for_category_tree(@category)
  category_tree_selects.each_with_index do |drop_down, i| %>
	<%= select_tag drop_down[:label], options_for_select(drop_down[:options], drop_down[:selected]), :include_blank => (@use_blank_for_root || i > 0),
	  :class => "category-nest" %>
	<% if (i+1) < category_tree_selects.count %>
	  &gt;
	<% end %>
  <% end %>