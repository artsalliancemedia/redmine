<h2><%=l(:label_working_periods_new)%></h2>

<%= labelled_form_for @working_period do |f| %>
  <%= error_messages_for 'working_period' %>

  <div class="box tabular">
  <!--[form:working_period]-->
  <p><%= f.select :day_list, @working_period.days, :required => true, :size => 41 %></p>
  <p><%= f.text_field :start_time_string_new, :required => true, :size => 41 %></p>
  <p><%= f.text_field :end_time_string_new, :required => true, :size => 41 %></p>
  <p><%= f.time_zone_select :time_zone, nil, :include_blank => true %> Leave blank to use user time zone</p>
  </div>

  <%= submit_tag l(:button_create) %>
<% end %>