<h2><%= link_to l(:screen_plural), screens_path %> &#187; <%=h @screen.cinema.name %> &#187; <%=h @screen.title %> </h2>

<%= labelled_form_for @screen do |f| %>
  <%= error_messages_for 'screen' %>

  <div class="box tabular">
  <!--[form:screen]-->
  <p><label><%= t(:cinema) %></label><%= f.collection_select :cinema_id ,@cinemas,:id,:name, :required => true %></p>
  <p><%= f.text_field :title, :required => true, :size => 60 %></p>
  <p><%= f.text_field :identifier, :required => true, :size => 60 %></p>
  <p><%= f.text_field :uuid, :size => 60,:readonly => true %></p>
  </div>

  <%= submit_tag l(:button_update) %>
<% end %>